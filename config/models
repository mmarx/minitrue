User
    email Text
    password Text Maybe
    verkey Text Maybe
    verified Bool
    UniqueUser email
    deriving Typeable
UserRole
    user UserId
    role Role
    UniqueUserRole user
MailingList
    name Text
    description Text
    header Textarea Maybe
    footer Textarea Maybe
    language Language default="'English'"
    UniqueName name
MailingListUser
    user UserId
    list MailingListId
    role ListRole
    supervised Supervision default="'Unsupervised'"
    unsubkey Text
    UniqueListUser user list
    UniqueUnsubscribe unsubkey list
Archive
    author UserId
    list MailingListId
    subject Text
    body Textarea
    timestamp UTCTime
Queue
    author UserId
    list MailingListId
    subject Text
    body Textarea
    timestamp UTCTime
Category json
    name Text
    description Text
    UniqueCategoryName name
    deriving Read Show Data Typeable
Event json
    name Text
    location Text
    description Textarea
    date Day
    time TimeOfDay
    list MailingListId
    category CategoryId
    UniqueNameDateTimeList name date time list

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)
